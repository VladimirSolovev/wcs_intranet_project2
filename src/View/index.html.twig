{% extends 'layout.html.twig' %}

{% block title %}Index{% endblock %}

{% block stylesheet %}
{% endblock %}

{% block header %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-5">
            <img class="img-responsive img-rounded" src="/assets/images/logo_orange_pastille.png" alt="User picture">
        </div>
        <div class="row justify-content-center">
            <h1 class="text-center">Bienvenue sur l'IntraWild !</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-sm-6 col-lg-4 mt-5">
                <form method="post">
                    <div class="form-group mb-3">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="email"><i class="fas fa-at"></i></label>
                            </div>
                            <input type="email" class="form-control" name="email" id="email"
                                   placeholder="Entre ton e-mail" required>
                        </div>
                        <small id="emailHelp" class="form-text text-muted">
                            On ne partagera pas tes informations, promis !
                        </small>
                    </div>

                    <div class="form-group mb-3">
                        <div class="input-group">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="password"><i class="fas fa-unlock-alt"></i></label>
                        </div>
                        <input type="password" class="form-control" name="password" id="password"
                               placeholder="Entre ton mot de passe" required>
                        </div>
                        <a href="/forgotten">Mot de passe oubli√© ?</a>
                    </div>
                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            {{ error }}
                        </div>
                    {% endif %}
                    <div class="row justify-content-center">
                        <button type="submit" class="btn btn-primary">Connexion</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
{% endblock %}