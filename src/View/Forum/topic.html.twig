{% extends 'layout.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    <section>
        <div class="container pt-5 pb-5">
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h1 class="text-center mt-0 mb-0"><strong>Forum</strong></h1>
                        </div>
                        <div class="card-body">
                            {% for topic in topics %}
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <blockquote class="blockquote mb-0">
                                            <p class="font-weight-bold"><a href="/forum/topic/{{ topic.topicid }}">
                                                    {{ topic.subject }}</a></p>
                                            <footer class="blockquote-footer">Auteur : <cite>{{ topic.firstname }}
                                                    {{ topic.lastname }}</cite></footer>
                                            <p class="text-right"><small>Date de cr√©ation - {{ topic.topicdate }}</small></p>
                                        </blockquote>
                                    </li>
                                </ul>
                            {% endfor %}
                        </div>
                        <div class="card-footer">
                            <a href="/forum/topic/add">Nouveau Topic</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
