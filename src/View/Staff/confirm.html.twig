{% extends 'layout.html.twig' %}

{% block title %}Confirmation d'email{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/staff.css">
{% endblock %}

{% block header %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        {{ error }}
                    </div>
                {% endif %}
                {% if success %}
                    <div class="alert alert-success" role="alert">
                        {{ success }}
                        <a href="/">Connecte-toi !</a>
                    </div>
                {% endif %}
            </div>
            <div class="col-sm-3"></div>
        </div>
    </div>
{% endblock %}
{% block footer %}
{% endblock %}