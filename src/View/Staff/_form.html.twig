{% block title %}Administration utilisateurs{% block title %}

{% block body %}
<form method="POST" class="text-center">
    <!-- hidden id for user's edition -->
    <input type="hidden" value="{{ user.id }}" name="id">
    <div class="input-group mb-3">
    <div class="input-group-prepend">
    <label for="firstname"><i class="far fa-user-circle"></i></label>
    </div>
        <input type="text" value="{{ user.firstname }}" name="firstname" id="firstname" max="16" min="3" required>
    </div>

    <br>
    <label for="lastname">User's lastname</label>
    <input type="text" value="{{ user.lastname }}" name="lastname" id="lastname" max="32" min="3" required>
    <br>
    <label for="email">User's email</label>
    <input type="email" value="{{ user.email }}" name="email" id="email" max="64" min="3" required>
    <br>
    <label for="password">User's password</label>
    <input type="password" value="" name="password" id="password" max="64" min="3" required>
    <br>
    <label for="description">User's description</label>
    <textarea name="description" id="description" rows="4" cols="50" style="background: #2f323b; color: #949ba2;">{{ user.description }}</textarea>
    <br>
    {% if status is same as(0) %}
        <button type="submit" class="btn btn-info btn-xs">Ajouter un utilisateur</button>
    {% else %}
        <button type="submit" class="btn btn-warning btn-xs">Editer cet utilisateur</button>
        <a href="/user/delete/{{ user.id }}" class="btn btn-danger btn-xs">Supprimer</a>
    {% endif %}
</form>
{% endblock %}